<concept rev="1.2" id="v_cpu_cores">

  <title>V_CPU_CORES Query Option (CDH 5 only)</title>
  <titlealts audience="PDF"><navtitle>V_CPU_CORES</navtitle></titlealts>
  <prolog>
    <metadata>
      <data name="Category" value="Impala"/>
